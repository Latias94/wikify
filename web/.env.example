# Wikify 前端环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置

# API 配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_BASE_URL=ws://localhost:8080/ws

# 应用配置
VITE_APP_TITLE=Wikify
VITE_APP_DESCRIPTION=AI-powered codebase exploration tool
VITE_APP_VERSION=0.2.0

# 开发配置
VITE_DEV_MODE=true
VITE_DEBUG_WEBSOCKET=true
VITE_DEBUG_API=true

# 功能开关
VITE_ENABLE_WIKI_GENERATION=true
VITE_ENABLE_FILE_BROWSER=true
VITE_ENABLE_EXPORT=true

# UI 配置
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_TOGGLE=true
VITE_SIDEBAR_DEFAULT_COLLAPSED=false

# 性能配置
VITE_MAX_CHAT_MESSAGES=100
VITE_AUTO_SCROLL_THRESHOLD=100
VITE_TYPING_INDICATOR_TIMEOUT=3000

# 网络配置
VITE_REQUEST_TIMEOUT=30000
VITE_MAX_RETRIES=3
VITE_RECONNECT_INTERVAL=3000
VITE_MAX_RECONNECT_ATTEMPTS=5
VITE_HEARTBEAT_INTERVAL=30000

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.js,.jsx,.ts,.tsx,.py,.java,.cpp,.c,.h,.hpp,.cs,.php,.rb,.go,.rs,.swift,.kt,.scala,.clj,.hs,.ml,.fs,.elm,.dart,.lua,.r,.sql,.sh,.bash,.zsh,.fish,.ps1,.bat,.cmd,.html,.xml,.svg,.vue,.svelte,.css,.scss,.sass,.less,.styl,.json,.yaml,.yml,.toml,.ini,.conf,.config,.env,.properties,.md,.mdx,.rst,.txt,.adoc,.org

# 分析和监控
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_ENABLE_ERROR_REPORTING=false
VITE_SENTRY_DSN=

# 安全配置
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
