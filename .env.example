# Wikify Environment Configuration
# Copy this file to .env and customize the values

# Server Configuration
WIKIFY_HOST=127.0.0.1
WIKIFY_PORT=8080
WIKIFY_DEV_MODE=true

# Permission Mode: "open", "private", "enterprise"
WIKIFY_PERMISSION_MODE=open

# Database Configuration (optional)
# DATABASE_URL=sqlite:data/wikify.db
# DATABASE_URL=postgresql://user:password@localhost/wikify

# LLM Provider Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI (optional)
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Logging Configuration
RUST_LOG=info
WIKIFY_LOG_LEVEL=info
WIKIFY_LOG_FORMAT=pretty

# Security Configuration
WIKIFY_API_KEY_SECRET=your-secret-key-for-jwt-signing
WIKIFY_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cache Configuration
WIKIFY_CACHE_ENABLED=true
WIKIFY_CACHE_TTL=3600

# Rate Limiting
WIKIFY_RATE_LIMIT_ENABLED=true
WIKIFY_RATE_LIMIT_REQUESTS=100
WIKIFY_RATE_LIMIT_WINDOW=60

# Development Settings
WIKIFY_RELOAD_ON_CHANGE=true
WIKIFY_PRETTY_LOGS=true

# Data Directories
WIKIFY_DATA_DIR=./data
WIKIFY_CONFIG_DIR=./config
WIKIFY_STATIC_DIR=./static

# Repository Settings
WIKIFY_MAX_REPO_SIZE=100MB
WIKIFY_MAX_FILE_SIZE=1MB

# Research Engine Settings
WIKIFY_MAX_ITERATIONS=5
WIKIFY_CONFIDENCE_THRESHOLD=0.7
WIKIFY_ENABLE_LLM_STRATEGY=true
